<%- include('../partials/header.ejs')%>
<div class="container py-5">

  <div class="row">
    <div class="col-md-4 mx-auto">  
<form method="post">


     
    <% if(message.success){ %>
    <div class="alert alert-success"><%= message.success %></div>
    <% }else if(message.fail) { %>
    <div class="alert alert-danger"><%= message.fail %></div>
    <% } %>

    <h1>Login</h1>
    <label for="email"><b>Email</b></label>
    <input type="text" class="form-control" placeholder="Enter Email" name="email" id="email" />

    <label for="psw"><b>Password</b></label>
    <input type="password" class="form-control"  placeholder="Enter Password" name="pass" id="pass" />

    <hr />
    <button type="submit" class="registerbtn">Login</button> <br>
    <button class="loginBtn loginBtn--facebook">
      Login with Facebook
    </button>
    
    <a href="/auth/google" class="loginBtn loginBtn--google">
      Login with Google
    </a>
 
 
    <p>Not a member ? <a href="/auth/google">Sign Up</a>.</p>

</form>
</div>
</div>
</div>

