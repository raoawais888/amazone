


<body class="sub_page">


  <%- include("../partials/header.ejs") %>

    <!-- end header section -->
    </div>


    <section id="breadcrumb">

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h2>Products</h2>
          </div>
        </div>
      </div>

    </section>
    <!-- product section -->

    <!-- new section add start -->
    <div class="container-fluid pt-5">
      <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-2 col-md-12">
          <!-- Price Start -->
          <div class="border-bottom mb-4 pb-4">
            <h5 class="font-weight-semi-bold mb-4">All Brands</h5>

            <div class="cat-box">
                 

                <!-- loop brands  -->
                <ul class=" category">

                  <% data.forEach((brand,index) =>{ %>
                  <li class="cat-p ">
                    <div><a href="#"><%=  brand.brand.name  %></a></div>

                    <% brand.brand.category.forEach((category , i) =>{ %>
                    <div class="tecihone">
                     
                      <div class="juery">
                        <ul>
                          <div class="will2px"><a href="#"><%= category.name %></a><span class="category-num">( <a href="#">2</a> )</span></div>
                        
                           <% category.model.forEach((model , i)=>{ %>
                          <li><a href="#"><%= model.name %></a></li>
                          <% }) %>
                        
            
                        </ul>
                      </div>
            
                   
          
            
            
                    </div>
                    <% }) %>


                  </li>

                  <% }) %>



                </ul>
                <!-- loop brands  -->


         
            </div>
            </div>
            </div>
            <!-- Price End -->

    
        <!-- Shop Sidebar End -->
       

        <!-- Shop Product Start -->
        <div class="col-lg-10 col-md-12">
          <div class="row pb-3">
            <div class="col-12 pb-1">
              <div class="d-flex align-items-center justify-content-between mb-4">
                <form action="">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search by name">
                    <div class="input-group-append">
                      <span class="input-group-text bg-transparent text-primary">
                        <i class="fa fa-search"></i>
                      </span>
                    </div>
                  </div>
                </form>
                <div class="dropdown ml-4">
                  <button class="btn border dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    Sort by
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                    <a class="dropdown-item" href="#">Latest</a>
                    <a class="dropdown-item" href="#">Popularity</a>
                    <a class="dropdown-item" href="#">Best Rating</a>
                  </div>
                </div>
              </div>
            </div>


            <% product.forEach(data=> { %>


              <!-- loop section nd -->


              <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                  <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                    <img class="img-fluid w-100" src="uploads/<%= data.image%>" alt="">
                  </div>
                  <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                    <h6 class="text-truncate mb-3">
                      <%= data.name %>t
                    </h6>
                    <div class="d-flex justify-content-center">
                      <h6>$ <%= data.price %>
                      </h6>
                      <h6 class="text-muted ml-2"><del>$123.00</del></h6>
                    </div>
                  </div>
                  <div class="card-footer d-flex justify-content-between bg-light border">
                    <a href="/product-detail/<%= data._id %>" class="btn btn-sm text-dark p-0"><i
                        class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                    <a href="" class="btn btn-sm text-dark p-0"><i
                        class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                  </div>
                </div>
              </div>

              <% }) %>

                <div class="col-12 pb-1">
                  <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-3">
                      <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true">«</span>
                          <span class="sr-only">Previous</span>
                        </a>
                      </li>
                      <li class="page-item active"><a class="page-link" href="#">1</a></li>
                      <li class="page-item"><a class="page-link" href="#">2</a></li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                          <span aria-hidden="true">»</span>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
          </div>
        </div>
        <!-- Shop Product End -->
      </div>
    </div>
    <!-- new section add end -->




    <!-- end product section -->


    <%- include("../partials/footer.ejs") %>

    <script>
      $(document).ready(function(){
      var navtimer,navleave;

      $(document).on("mouseenter",".cat-p",function(){
        
			clearTimeout(navleave);
			clearTimeout(navtimer);
			var that = this;
			navtimer = setTimeout(function(){
				$(".tecihone").hide();
				$(that).find(".tecihone").show();
				$(".cat-p").removeClass("cat-p-hover");
				$(that).addClass("cat-p-hover");
			},60);
		});
	
	
		$(document).on("mouseleave",".cat-p",function(){
			clearTimeout(navtimer);
			clearTimeout(navleave);
			var that = this;
			navleave = setTimeout(function(){
				$(".tecihone").hide();
				$(".cat-p").removeClass("cat-p-hover");
			},30);
		});

  })
    </script>