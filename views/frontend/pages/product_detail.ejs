<body class="sub_page">


    <%- include("../partials/header.ejs") %>

        <!-- end header section -->
        </div>


        <section id="breadcrumb">

            <div class="container">
              <div class="row">
                <div class="col-md-12">
                  <h2><%= detail.name %></h2>
                </div>
              </div>
            </div>
        
          </section>


        <!-- product detail section -->
        <section class="product_detail py-5">

            <div class="container-fluid mt-2 mb-3">
                <div class="row no-gutters">
                    <div class="col-md-5 pr-2">
                        <div class="card">
                            <div class="demo">
                                <ul id="lightSlider">
                                    <li data-thumb="https://i.imgur.com/KZpuufK.jpg"> <img
                                            src="/uploads/<%= detail.image %>" /> </li>
                                    
                                </ul>
                            </div>
                        </div>
                      
                        
                    </div>
                    <div class="col-md-7">
                        <div class="card">
                            
                            <div class="about"> <span class="font-weight-bold"><%= detail.name %> </span>
                                <h4 class="font-weight-bold">$<%= detail.price %></h4>
                            </div>
                            <div class="buttons">  
                                
                                <% if(user){ %>

                                <button  onclick="addTOCart()"  data-product="<%= JSON.stringify(detail) %>" id="add_cart_btn" class="btn btn-outline-warning btn-long cart">Add to
                                     Cart</button>
                               
                                     <% }else{ %>

                                        <button class="btn btn-outline-warning btn-long cart" id="login_show">Add to
                                            Cart</button>


                                     <% } %>
                                        <!--<button class="btn btn-warning btn-long buy">Buy it Now</button>
                                <button class="btn btn-light wishlist"> <i class="fa fa-heart"></i> </button> </div> -->
                            <hr>
                            <div class="product-description">
                               
                                

                                <div class="d-flex flex-row align-items-center"> <i class="fa fa-calendar-check-o"></i>
                                    <span class="ml-1">Delivery from sweden, 15-45 days</span> </div>
                                <div class="mt-2"> <span class="font-weight-bold">Description</span>
                                    <p><%= detail.desc %></p>
                                    <div class="bullets">
                                        <div class="d-flex align-items-center"> <span class="dot"></span> <span
                                                class="bullet-text">Best in Quality</span> </div>
                                        <div class="d-flex align-items-center"> <span class="dot"></span> <span
                                                class="bullet-text">Anti-creak joinery</span> </div>
                                        <div class="d-flex align-items-center"> <span class="dot"></span> <span
                                                class="bullet-text">Sturdy laminate surfaces</span> </div>
                                        <div class="d-flex align-items-center"> <span class="dot"></span> <span
                                                class="bullet-text">Relocation friendly design</span> </div>
                                        <div class="d-flex align-items-center"> <span class="dot"></span> <span
                                                class="bullet-text">High gloss, high style</span> </div>
                                        <div class="d-flex align-items-center"> <span class="dot"></span> <span
                                                class="bullet-text">Easy-access hydraulic storage</span> </div>
                                    </div>
                                </div>
                              
                               
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>


        </section>


        <!-- end product detail section -->


        <%- include("../partials/footer.ejs") %>