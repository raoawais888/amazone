<body class="sub_page">


    <%- include("../partials/header.ejs") %>

        <!-- end header section -->
        </div>


      


        <!-- product detail section -->
        <section class="product_detail py-5 content_scroll">

            <div class="container-fluid mt-2 mb-3">
                <div class="row no-gutters">
                    <div class="col-md-5 pr-2">
                        <div class="card">
                            <div class="demo">
                                <ul id="lightSlider">
                                    <li data-thumb="https://i.imgur.com/KZpuufK.jpg"> <img
                                            src="/uploads/<%= detail.image %>" /> </li>
                                    
                                </ul>
                            </div>
                        </div>
                      
                        
                    </div>
                    <div class="col-md-7">
                        <div class="card">
                            
                            <div class="about"> <span class="font-weight-bold"><%= detail.name %> </span>
                                <h4 class="font-weight-bold">$<%= detail.price %></h4>
                            </div>
                            <div class="buttons">  
                                
                                <% if(user){ %>

                                <button  onclick="addTOCart()"  data-product="<%= JSON.stringify(detail) %>" id="add_cart_btn" class="btn action_btn btn-outline-warning btn-long cart">Add to
                                     Cart</button>
                               
                                     <% }else{ %>

                                        <button class="btn btn-outline-warning action_btn btn-long cart" id="login_show">Add to
                                            Cart</button>


                                     <% } %>
                                        <!--<button class="btn btn-warning btn-long buy">Buy it Now</button>
                                <button class="btn btn-light wishlist"> <i class="fa fa-heart"></i> </button> </div> -->
                            <hr>
                            <div class="product-description">
                               
                                

                                <div class="d-flex flex-row align-items-center"> <i class="fa fa-calendar-check-o"></i>
                                    <span class="ml-1">Delivery from sweden, 15-45 days</span> </div>
                                <div class="mt-2"> <span class="font-weight-bold">Description</span>
                                    <p><%= detail.desc %></p>
                               
                                </div>
                              
                               
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>


        </section>
        <!-- end product detail section -->
        <% if(user){ %>
        <section class="product-review py-5">
        <br><br>
        <h3 class="heading">Add Your Review</h3>
         <% if(message.success){ %>
            <div class="alert alert-success"><%= message.success %></div>
            <% } %>
         <div class="container">
           <form method="post" action="/submit-review">
            <input type="hidden" name="user" value="<%= user._id %>">
            <input type="hidden" name="product" value="<%= detail._id %>">
             <div class="form-group">
               <textarea class="form-control status-box" rows="3" placeholder="Enter your comment here..." name="comment"></textarea>
             </div>
           <div class="button-group pull-right">
             <button type="submit" class="btn btn-primary">Post</button>
           </div>
           </form>
         </div>
         </section>
         <% } %>
         <% if(comments){ %>
      <section id="testimonials">
        <!--heading--->
        <div class="testimonial-heading">
            <span>Product Reviews</span>
        </div>
        <!--testimonials-box-container------>
        <div class="testimonial-box-container">
            <!--BOX-1-------------->
               <% comments.forEach(comment => { %>  
            <div class="testimonial-box">
                <!--top------------------------->
                <div class="box-top">
                    <!--profile----->
                    <div class="profile">
                        <!--img---->
                        <div class="profile-img">
                            <img src="/images/profile.png" />
                        </div>
                        <!--name-and-username-->
                        <div class="name-user">
                            <strong><%= comment.user.name %></strong>
                            <!-- <span>@liammendes</span> -->
                        </div>
                    </div>
                    <!--reviews------>
                    <!-- <div class="reviews">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                    </div> -->
                </div>
                <!--Comments---------------------------------------->
                <div class="client-comment">
                    <p><%= comment.comment %></p>
                </div>
            </div>

             <% }) %>
         
        </div>
      </section>
        <% } %>
        <%- include("../partials/footer.ejs") %>