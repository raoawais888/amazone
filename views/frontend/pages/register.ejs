<%- include('../partials/header.ejs')%>
<form action="" method="post">
  <div class="container">
    <% if(message.fail) { %>
    <div class="alert alert-danger"><%= message.fail %></div>
    <% } %>
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr />

    <label for="name"><b>Your Name</b></label>
    <input
      type="text"
      placeholder="First and Last name"
      name="name"
      id="name"
    />

    <label for="email"><b>Email</b></label>
    <input type="text" placeholder="Enter Email" name="email" id="email" />

    <label for="user_type"><b>User Type</b></label>
    <select name="user_type" id="user_type">
      <option name="" value="0">Select User Type</option>
      <option name="vendor" value="2">Vendor</option>
      <option name="customer" value="3">Customer</option>
    </select>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="pass" id="pass" />

    <label for="psw-repeat"><b>Confirm Password</b></label>
    <input
      type="password"
      placeholder="Repeat Password"
      name="cpass"
      id="cpass"
    />
    <hr />

    <p>
      By creating an account you agree to our <a href="#">Terms & Privacy</a>.
    </p>
    <button type="submit" class="registerbtn btn-auth">Register</button>
  </div>

  <div class="container signin">
    <p>Already have an account? <a href="/login">Sign in</a>.</p>
  </div>
</form>
<%- include('../partials/footer.ejs'); %>
