<%- include('../partials/header.ejs')%>

<section id="breadcrumb">

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Register</h2>
      </div>
    </div>
  </div>

</section>
<div class="container my-5">
  <div class="row">
    <div class="col-md-4 mx-auto login_box">

    
<form action="" method="post">

    <% if(message.fail) { %>
    <div class="alert alert-danger"><%= message.fail %></div>
    <% } %>
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr />

     <div class="form-group">
      <label for="name"><b>Your Name</b></label>
      <input
        type="text"
        placeholder="First and Last name"
        name="name"
        id="name"
        class="form-control"
      />
     </div>
   

     <div class="form-group">
      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Enter Email" name="email" id="email" class="form-control" />
     </div>
   

     <div class="form-group">
      <label for="user_type"><b>User Type</b></label>
      <select name="user_type" id="user_type" class="form-control">
        <option  disabled selected>Select User Type</option>
        <option name="vendor" value="2">Vendor</option>
        <option name="customer" value="3">Customer</option>
      </select>
     </div>
 


<div class="form-group">
    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="pass" id="pass" class="form-control" />
  </div>

  <div class="form-group">
    <label for="psw-repeat"><b>Confirm Password</b></label>
    <input
      type="password"
      placeholder="Repeat Password"
      name="cpass"
      id="cpass"
      class="form-control"
    />
  </div>
  


 
    <button type="submit" class="registerbtn btn-auth log_btn d-block w-100">Register</button>
    <!-- <a href="/auth/facebook" class="loginBtn loginBtn--facebook">
      Login with Facebook
    </a> -->
    
    <a href="/auth/google" class="loginBtn loginBtn--google">
      Login with Google
    </a>

      <p>Already have an account? <a href="/login" class="anchor_btn">Sign in</a>.</p>
  
</form>
</div>
</div>
</div>
<%- include('../partials/footer.ejs'); %>
